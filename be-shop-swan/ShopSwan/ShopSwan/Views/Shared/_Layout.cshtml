@using Microsoft.AspNetCore.Http

@{ 
    var ssUser = Context.Session.GetString("User");
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ShopSwan</title>
    @*    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" />*@
    <link rel="stylesheet" type="text/css" href="~/common/slick/slick.css">
    <link rel="stylesheet" type="text/css" href="~/common/slick/slick-theme.css">
    <link rel="stylesheet" href="~/css/toastr.css" />
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="~/css/trangchu.css" />
    <link rel="stylesheet" href="~/css/modal.css" />
</head>
<body>
    <div class="main">
        <!-- header -->
        <div class="header">
            <div class="logo">
                <a href="/"><img class="mt-20" src="~/images/logo.png" alt=""></a>
            </div>
            <div class="search">
                <form class="search-container">
                    <input type="text" id="search-bar" placeholder="Tìm kiếm">
                    <a href="#">
                        <img class="search-icon"
                             src="~/images/search-icon.png">
                    </a>
                </form>
            </div>
            <div class="header-right">
                  <div class="box-icon">
                    <a  class="card" href="#modal-option-2">
                        <img src="~/images/icon/card.png" alt="">
                    </a>
                </div>
                @if (ssUser == null)
                {
                    <div class="box-btn">
                        <a href="/home/login" class="btn-white">Đăng nhập</a>
                    </div>
                    <div class="box-btn mr-0">
                        <a href="/home/register" class="btn-black">Đăng ký</a>
                    </div>
                }
                else
                {
                    <div class="box-icon">
                        <a href="/home/persional" class="user">
                            <img src="~/images/icon/user.png" alt="">
                        </a>
                    </div>
                    <div class="box-icon mr-0">
                        <a href="#" class="ring">
                            <img src="~/images/icon/ring.png" alt="">
                        </a>
                    </div>
                }

            </div>
        </div>
        <!-- end header -->
        <div class="nav mt-40">
            <div>
                <ul class="nav-bar">
                    <li><a href="/">TRANG CHỦ</a></li>
                    <li><a href="/home/Category">SẢN PHẨM</a></li>
                    <li><a href="/home/news">TIN TỨC</a></li>
                    <li><a href="/home/introduce">GIỚI THIỆU</a></li>
                    <li><a href="/home/contact">LIÊN HỆ</a></li>
                </ul>
            </div>
        </div>

        @RenderBody()


        <!-- end category -->
        <div class="footer">
            <div class="footer-content">
                <div class="n-row">
                    <div class="col-5">
                        <div class="footer-header">
                            <p class="footer-header-title">Swan Luôn lắng nghe bạn !</p>
                            <p class="footer-header-content">
                                Chúng tôi luôn trân trọng và lắng nghe mọi ý kiến của bạn góp ý để cải thiện chất lượng và dịch vụ một ngày tốt hơn!
                            </p>
                        </div>
                        <div class="icons n-row">
                            <div class="col-3">
                                <img class="footer-icon" src="~/images/icon/phone-white.png" alt="">
                            </div>
                            <div class="col-9">
                                <p>0335969556</p>
                            </div>
                        </div>
                        <div class="icons n-row">
                            <div class="col-3">
                                <img style="width: 50px;" class="footer-icon" src="~/images/icon/mail-w.png" alt="">
                            </div>
                            <div class="col-9">
                                <p>swan@gmai.com</p>
                            </div>
                        </div>
                        <div class="icons n-row">
                            <div class="col-3">
                                <img class="footer-icon" src="~/images/icon/location-w.png" alt="">
                            </div>
                            <div class="col-9">
                                <p>189 Hữu Lê, Hữu Hoà, Thanh Trì, Hà Nội</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="footer-header">
                            <p class="footer-header-title">CHÍNH SÁCH</p>
                            <p class="footer-header-content">
                                Chính sách kiểm tra hàng
                            </p>
                            <p class="footer-header-content">
                                Đổi trả trong vòng 7 ngày
                            </p>
                            <p class="footer-header-content">
                                Chính sách giao hàng tận nơi
                            </p>
                        </div>
                    </div>
                    <div class="col-3">
                        <div class="footer-header">
                            <p class="footer-header-title">KẾT NỐI</p>

                        </div>
                        <div class="n-row mxh">
                            <div class="">
                                <img class="footer-icon" src="~/images/icon/logo-facebook.png" alt="">
                            </div>

                            <div class="">
                                <img class="footer-icon" src="~/images/icon/instagram.png" alt="">
                            </div>

                            <div class="">
                                <img class="footer-icon" src="~/images/icon/message.png" alt="">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <style>
            .main{
                position:relative;
            }
           /* .dialog__wrapper{
                position:absolute;
                right:0;
                top:0;
            }*/

        </style>
        
    </div>
    
        <div class="modals modal-layout text-left">
            <dialog class="dialog-1" id="modal-option-2">
                <div class="dialog__wrapper dialog__wrapper1">
                    <button class="dialog__close">✕</button>
                     <div class="form-cart">
                    <h2>Giỏ hàng</h2>
                    <div class="form-group mt-20 ">
                        <div class="product-item">
                            <div class="n-row">
                                <div class="col-4">
                                    <div class="pr-15 mr-20">
                                        <img src="~/images/all/cart/1.png" alt="">
                                    </div>
                                </div>
                                <div class="col-8 box">
                                    <div class="box-header">
                                        <h3>ÁO NỈ MŨ TRÁI TIM</h3>
                                    </div>
                                    <div class="box-main">
                                        <div class="n-row">
                                            <div class="col-7 d-flex">
                                                <a href="#" class="btn-color bg-light-gray"></a>
                                                <a href="#" class="btn-size"> L</a>
                                            </div>
                                            <div class="col-5 text-right">
                                                <img src="~/images/icon/Recycle-bin.png" style="width: 24px;"
                                                     alt="">
                                            </div>
                                        </div>
                                        <div class="n-row mt-20">
                                            <div class="col-6 box-amount">
                                                <div class="box-input-amount d-flex ">
                                                    <div class="input-amount-left"> - </div>
                                                    <div>
                                                        <input type="text" id="txtAmount"
                                                               class="n-input input-amount" value="1">
                                                    </div>
                                                    <div class="input-amount-right"> + </div>
                                                </div>
                                            </div>
                                            <div class="col-6 text-right">
                                                <p>199.000đ</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="product-item mt-20">
                            <div class="n-row">
                                <div class="col-4">
                                    <div class="pr-15 mr-20">
                                        <img src="~/images/all/cart/1.png" alt="">
                                    </div>
                                </div>
                                <div class="col-8 box">
                                    <div class="box-header">
                                        <h3>ÁO NỈ MŨ TRÁI TIM</h3>
                                    </div>
                                    <div class="box-main">
                                        <div class="n-row">
                                            <div class="col-7 d-flex">
                                                <a href="#" class="btn-color bg-purple"></a>
                                                <a href="#" class="btn-size"> L</a>
                                            </div>
                                            <div class="col-5 text-right">
                                                <img src="~/images/icon/Recycle-bin.png" style="width: 24px;"
                                                     alt="">
                                            </div>
                                        </div>
                                        <div class="n-row mt-20">
                                            <div class="col-6 box-amount">
                                                <div class="box-input-amount d-flex ">
                                                    <div class="input-amount-left"> - </div>
                                                    <div>
                                                        <input type="text" id="txtAmount"
                                                               class="n-input input-amount" value="1">
                                                    </div>
                                                    <div class="input-amount-right"> + </div>
                                                </div>
                                            </div>
                                            <div class="col-6 text-right">
                                                <p>199.000đ</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="box-btn text-center mt-40">
                            <a href="/home/cart" class="btn-black">TIẾN HÀNH THANH TOÁN</a>
                        </div>
                    </div>
                </div>
                </div>
            </dialog>
        </div>
    


    <script src="~/js/jquery-2.2.0.min.js" type="text/javascript"></script>
    <script src="~/common/slick/slick.js" type="text/javascript" charset="utf-8"></script>
    <script src="~/js/toastr.js"></script>
    <script src="~/js/script.js"></script>
    <script src="~/js/trangchu.js"></script>
    <script src="~/js/modal.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
