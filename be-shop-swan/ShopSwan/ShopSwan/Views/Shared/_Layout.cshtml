@using Microsoft.AspNetCore.Http

@{ 
    var ssUser = Context.Session.GetString("User");
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ShopSwan</title>
    @*    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" />*@
    <link rel="stylesheet" type="text/css" href="~/common/slick/slick.css">
    <link rel="stylesheet" type="text/css" href="~/common/slick/slick-theme.css">
    <link rel="stylesheet" href="~/css/toastr.css" />
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="~/css/trangchu.css" />
    <link rel="stylesheet" href="~/css/modal.css" />
</head>
<body>
    <div class="main">
        <!-- header -->
        <div class="header">
            <div class="logo">
                <a href="/"><img class="mt-20" src="~/images/logo.png" alt=""></a>
            </div>
            <div class="search">
                <form class="search-container">
                    <input type="text" id="search-bar" placeholder="Tìm kiếm">
                    <a href="#">
                        <img class="search-icon"
                             src="~/images/search-icon.png">
                    </a>
                </form>
            </div>
            <div class="header-right">
                <div class="box-icon">
                    <a href="/home/cart" class="card">
                        <img src="~/images/icon/card.png" alt="">
                    </a>
                </div>

                @if (ssUser == null)
                {
                    <div class="box-btn">
                        <a href="/home/login" class="btn-white">Đăng nhập</a>
                    </div>
                    <div class="box-btn mr-0">
                        <a href="/home/register" class="btn-black">Đăng ký</a>
                    </div>
                }
                else
                {
                    <div class="box-icon">
                        <a href="/home/persional" class="user">
                            <img src="~/images/icon/user.png" alt="">
                        </a>
                    </div>
                    <div class="box-icon mr-0">
                        <a href="#" class="ring">
                            <img src="~/images/icon/ring.png" alt="">
                        </a>
                    </div>
                }

            </div>
        </div>
        <!-- end header -->
        <div class="nav mt-40">
            <div>
                <ul class="nav-bar">
                    <li><a href="/">TRANG CHỦ</a></li>
                    <li><a href="/home/Category">SẢN PHẨM</a></li>
                    <li><a href="/home/news">TIN TỨC</a></li>
                    <li><a href="/home/introduce">GIỚI THIỆU</a></li>
                    <li><a href="/home/contact">LIÊN HỆ</a></li>
                </ul>
            </div>
        </div>

        @RenderBody()


        <!-- end category -->
        <div class="footer">
            <div class="footer-content">
                <div class="n-row">
                    <div class="col-5">
                        <div class="footer-header">
                            <p class="footer-header-title">Swan Luôn lắng nghe bạn !</p>
                            <p class="footer-header-content">
                                Chúng tôi luôn trân trọng và lắng nghe mọi ý kiến của bạn góp ý để cải thiện chất lượng và dịch vụ một ngày tốt hơn!
                            </p>
                        </div>
                        <div class="icons n-row">
                            <div class="col-3">
                                <img class="footer-icon" src="~/images/icon/phone-white.png" alt="">
                            </div>
                            <div class="col-9">
                                <p>0335969556</p>
                            </div>
                        </div>
                        <div class="icons n-row">
                            <div class="col-3">
                                <img style="width: 50px;" class="footer-icon" src="~/images/icon/mail-w.png" alt="">
                            </div>
                            <div class="col-9">
                                <p>swan@gmai.com</p>
                            </div>
                        </div>
                        <div class="icons n-row">
                            <div class="col-3">
                                <img class="footer-icon" src="~/images/icon/location-w.png" alt="">
                            </div>
                            <div class="col-9">
                                <p>189 Hữu Lê, Hữu Hoà, Thanh Trì, Hà Nội</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="footer-header">
                            <p class="footer-header-title">CHÍNH SÁCH</p>
                            <p class="footer-header-content">
                                Chính sách kiểm tra hàng
                            </p>
                            <p class="footer-header-content">
                                Đổi trả trong vòng 7 ngày
                            </p>
                            <p class="footer-header-content">
                                Chính sách giao hàng tận nơi
                            </p>
                        </div>
                    </div>
                    <div class="col-3">
                        <div class="footer-header">
                            <p class="footer-header-title">KẾT NỐI</p>

                        </div>
                        <div class="n-row mxh">
                            <div class="">
                                <img class="footer-icon" src="~/images/icon/logo-facebook.png" alt="">
                            </div>

                            <div class="">
                                <img class="footer-icon" src="~/images/icon/instagram.png" alt="">
                            </div>

                            <div class="">
                                <img class="footer-icon" src="~/images/icon/message.png" alt="">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>




    <script src="~/js/jquery-2.2.0.min.js" type="text/javascript"></script>
    <script src="~/common/slick/slick.js" type="text/javascript" charset="utf-8"></script>
    <script src="~/js/toastr.js"></script>
    <script src="~/js/script.js"></script>
    <script src="~/js/trangchu.js"></script>
    <script src="~/js/modal.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
