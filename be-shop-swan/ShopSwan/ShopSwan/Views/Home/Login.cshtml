
@{
    ViewData["Title"] = "Login";
}
     <div class="main-sign mt-20">
            <div class="form-login">
                <h2>ĐĂNG NHẬP TÀI KHOẢN</h2>
                <div class="form-group mt-20">
                    <input type="text" class="form-control" id="email" placeholder="EMAIL/SĐT">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" id="password" placeholder="Mật khẩu">
                </div>
                <div class="form-group">
                    <a class="btn-black text-center" id="btn-login">ĐĂNG NHẬP</a>
                </div>
                <div class="form-group  text-center">
                    <a href="/home/forgotpassword" class="btn-forgot">Quên mật khẩu</a>
                </div>
                <div class="form-group text-center">
                    <a href="/home/register" class="btn-register">Bạn chưa có tài khoản ? <u>ĐĂNG KÝ</u></a>
                </div>
            </div>
            <div class="form-group text-center">
                <div class="line-black">
                    <span class="line-text">Hoặc</span>
                </div>
            </div>
            <div class="form-group">
                <div class="form-control">
                    <div class="sign-google">
                        <div class="box-img">
                            <img style="width: 24px" src="~/images/icon/google.png" alt="">
                        </div>
                        <div class="box-content">
                            <p>Đăng nhập bằng Google</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="form-control">
                    <div class="sign-google">
                        <div class="box-img">
                            <img style="width: 24px" src="~/images/icon/fb.png" alt="">
                        </div>
                        <div class="box-content">
                            <p>Đăng nhập bằng Facebook</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
